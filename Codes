//concatenation of strings
#include <iostream>
#include <string>
using namespace std;
int main(){
    string s,t;
    cout<<"Enter first string:"<<endl;
    cin>>s;
    cout<<"Enter second string:"<<endl;
    cin>>t;
    cout<<"Concatenation of strings is:"<<s+t<<endl;
    return 0;
}


